############################################
# 3.1 – Get all persons
############################################
GET http://localhost:3001/api/persons
Accept: application/json

###

############################################
# 3.2 – Info page
############################################
GET http://localhost:3001/info

###

############################################
# 3.3 – Get single person (existing id)
# 1) First run request 3.1
# 2) Copy any "id" from the returned list
# 3) Replace <EXISTING_ID> with that value
############################################
GET http://localhost:3001/api/persons/<EXISTING_ID>
Accept: application/json

###

############################################
# 3.3 – Get single person (non-existing id)
# Use any valid ObjectId that does not exist in the database.
# Example: take <EXISTING_ID> and change the last character.
############################################
GET http://localhost:3001/api/persons/<NON_EXISTING_VALID_ID>
Accept: application/json

###

############################################
# 3.4 – Delete person (existing id)
# Use the same <EXISTING_ID> from above.
############################################
DELETE http://localhost:3001/api/persons/<EXISTING_ID>

###

############################################
# 3.4 – Delete person (non-existing id)
# Use the same <NON_EXISTING_VALID_ID> from above.
############################################
DELETE http://localhost:3001/api/persons/<NON_EXISTING_VALID_ID>

###

############################################
# 3.5 – Create new person (valid data)
############################################
POST http://localhost:3001/api/persons
Content-Type: application/json
Accept: application/json

{
  "name": "Test User",
  "number": "123-4567890"
}

###

############################################
# 3.6 – Create person: missing name
############################################
POST http://localhost:3001/api/persons
Content-Type: application/json
Accept: application/json

{
  "number": "111-222333"
}

###

############################################
# 3.6 – Create person: missing number
############################################
POST http://localhost:3001/api/persons
Content-Type: application/json
Accept: application/json

{
  "name": "No Number User"
}

###

############################################
# 3.6 – Create person: duplicate name
# Note: This returns an error only if backend validation
# for unique names is implemented.
############################################
POST http://localhost:3001/api/persons
Content-Type: application/json
Accept: application/json

{
  "name": "Test User",
  "number": "000-0000000"
}
